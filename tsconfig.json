{
    "compilerOptions" : {
        "module"            : "commonjs",
        "target"            : "es6",
        "noImplicitAny"     : true,
        "sourceMap"         : true,
        "noImplicitReturns" : true,
        "strictNullChecks"  : true,
        "noEmitOnError"     : true,
        "declaration"       : true,
        "outDir"            : "./"
    },
    "include"         : [
        "./src/**/*"
    ],
    "exclude"         : [
        "./node_modules"
    ]
}
